{
  "productName": "Simplest File Renamer",
  "appId": "com.simplestfilerenamer.simplestfilerenamer",
  "copyright": "Copyright Â© 2020 Boris Yakubchik",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "win": {
    "icon": "src/assets/favicon",
    "target": [
      "nsis"
    ]
  },
  "mac": {
    "icon": "src/assets/favicon.icns",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "src/assets/favicon.icns",
    "target": [
      "AppImage"
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true
  }
}
